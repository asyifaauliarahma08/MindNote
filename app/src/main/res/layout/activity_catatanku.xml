<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A89862">

    <!-- Latar Atas -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="137dp"
        android:scaleType="fitXY"
        android:src="@drawable/atas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- RecyclerView untuk daftar catatan -->

    <!-- Tombol Tambah Catatan (+) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCatatan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/imageView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addNoteButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="#000000"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/imageView21"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bagian bawah (navigasi) -->

    <!-- Icon Navigasi Buku -->

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="454dp"
        android:layout_height="77dp"
        android:src="@drawable/textboxbawah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_kekalender"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:id="@+id/img_book"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/buku" />

    <!-- Icon Navigasi Kalender -->

    <!-- Icon Navigasi Akun -->

    <ImageView
        android:id="@+id/img_kekalender"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kalenderr" />

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="51dp"
        android:layout_height="56dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/account" />

</androidx.constraintlayout.widget.ConstraintLayout>
